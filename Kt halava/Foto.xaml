<Window x:Class="Kt_halava.Foto"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kt_halava"
        mc:Ignorable="d"
        Title="Foto" Height="450" Width="800">
    <Grid >        
        <RadioButton Name="first" Content="First Photo" FontSize="25" HorizontalAlignment="Left" Height="37" Margin="493,103,0,0" VerticalAlignment="Top" Width="165" Grid.Column="1" Checked="RadioButton_Checked"/>
        <RadioButton Name="second" Content="Second Photo" FontSize="25" HorizontalAlignment="Left" Height="37" Margin="493,140,0,0" VerticalAlignment="Top" Width="165" Grid.Column="1" Checked="Second_Checked"/>
        <RadioButton Name="third" Content="Third Photo" FontSize="25" HorizontalAlignment="Left" Height="37" Margin="493,177,0,0" VerticalAlignment="Top" Width="165" Grid.Column="1" Checked="Third_Checked"/>
        <Button Content="change color" FontSize="25" HorizontalAlignment="Left" Height="59" Margin="44,29,0,0" VerticalAlignment="Top" Width="258" Click="Button_Click" Grid.ColumnSpan="2"/>

        <Image Name="DisplayImage" HorizontalAlignment="Left" Height="238" Margin="84,160,0,0" VerticalAlignment="Top" Width="321" Grid.Column="1"/>
    </Grid>
</Window>
